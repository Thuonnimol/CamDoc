<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1"


    >


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:src="@drawable/a"
        android:layout_weight="0.29" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search Document"
        android:id="@+id/email_View"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:textColor="#3247e7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_search"
        style="@android:style/Animation.Toast"
        android:hint="Search Document" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="@string/bu_searchs"
            android:onClick="sendMessage"
            android:id="@+id/bu_view"
            android:background="#e7e951"
            android:layout_weight="0.19" />

    </LinearLayout>

    <Button
        android:layout_width="132dp"
        android:layout_height="34dp"
        android:text="View All Document"
        android:id="@+id/bu_search"
        android:onClick="sendMessage"
        android:layout_gravity="right"
        android:background="#e7e951"
        android:layout_weight="0.05" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.38">

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/bu_Login"
        android:onClick="sendMessage2"
        android:background="#e7e951"
        android:layout_weight="0.15" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER NOW!!!"
        android:onClick="sendMessage1"
        android:id="@+id/bu_register"
        android:background="#e7e951"
        android:layout_weight="0.15" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:onClick="sendMessage3"
        android:id="@+id/bu_about"
        android:background="#e7e951"
            
        android:layout_weight="0.15" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="10dp" />
</LinearLayout>


</LinearLayout>
